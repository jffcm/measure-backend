{
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "outDir": "./build",
      "noEmitOnError": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
    "include": ["./src/**/*", "src/server.ts"]
  }
  